<Page
    x:Class="_1507_UWP.SharePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="12">
            <TextBlock Text="QuickUp Tool" FontSize="24" FontWeight="SemiBold" HorizontalAlignment="Center"/>
            <ProgressBar x:Name="progressBar" Width="250" Height="8" Margin="0,20,0,0"/>
            <TextBlock x:Name="StatusText" Text="Receiving file..." HorizontalAlignment="Center" TextWrapping="Wrap"/>
        </StackPanel>
    </Grid>
</Page>