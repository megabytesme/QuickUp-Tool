<Page
    x:Class="_1809_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shared="using:QuickUp.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Border x:Name="AppTitleBar" VerticalAlignment="Top" Background="{ThemeResource SystemChromeMediumLowColor}">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,6">
                <FontIcon Glyph="&#xE898;" VerticalAlignment="Center" Margin="0,0,8,0" FontFamily="Segoe MDL2 Assets" />
                <TextBlock x:Name="AppTitle" Text="QuickUp Tool" VerticalAlignment="Center" Style="{ThemeResource CaptionTextBlockStyle}" />
            </StackPanel>
        </Border>

        <Grid Margin="0,48,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid
                Width="200"
                Height="200"
                Grid.ColumnSpan="2"
                VerticalAlignment="Top"
                HorizontalAlignment="Center">

                <Border
                    Width="200"
                    Height="200"
                    CornerRadius="100"
                    Background="Transparent">
                    <Grid>
                        <ProgressBar
                            Name="progressBar"
                            Width="200"
                            Height="200"
                            Minimum="0"
                            Maximum="100"
                            Value="0"
                            BorderThickness="0"
                            Background="{ThemeResource ProgressBarBackgroundThemeBrush}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        <Ellipse
                            Width="160"
                            Height="160"
                            Fill="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center" />
                        <muxc:Button
                            x:Name="progressRingButton"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="ProgressRingButton_Click"
                            CornerRadius="100"
                            Foreground="Black"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Height="200"
                            Width="200">
                            <Grid>
                                <Ellipse Fill="Transparent" Width="160" Height="160" />
                                <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock
                                        x:Name="buttonText"
                                        Text="&#xE898;"
                                        TextWrapping="Wrap"
                                        TextAlignment="Center"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="20"
                                        Padding="10" />
                                </Viewbox>
                            </Grid>
                        </muxc:Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>

        <Border
            Background="{ThemeResource SystemChromeMediumLowColor}"
            CornerRadius="8"
            Margin="20,280,20,20"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"
            Grid.Row="1"
            Padding="12">
            <ScrollViewer
                HorizontalScrollMode="Auto"
                HorizontalScrollBarVisibility="Auto"
                VerticalScrollMode="Auto"
                VerticalScrollBarVisibility="Auto">
                <Grid>
                    <TextBlock
                        Name="noHistory"
                        Text="Uploaded files will appear here"
                        FontStyle="Italic"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                    <Grid Name="filesGrid" Margin="0" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" MaxWidth="200" />
                            <ColumnDefinition Width="2*" MaxWidth="200" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="Auto" MaxWidth="50" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <TextBlock
                            Text="File Name"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Left"
                            Padding="10,8,10,4"
                            Grid.Column="0" />
                        <TextBlock
                            Text="Status"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Left"
                            Padding="10,8,10,4"
                            Grid.Column="1" />
                        <TextBlock
                            Text="URL"
                            FontWeight="SemiBold"
                            HorizontalAlignment="Left"
                            Padding="10,8,10,4"
                            Grid.Column="2" />
                        <TextBlock Grid.Column="3" Width="34" Margin="0,8,0,0" />

                        <ItemsControl
                            ItemsSource="{x:Bind UploadedFiles, Mode=OneWay}"
                            Grid.Row="1"
                            Grid.ColumnSpan="4">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate x:DataType="shared:UploadedFile">
                                    <Grid Margin="0,0,0,6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*" MaxWidth="200" />
                                            <ColumnDefinition Width="2*" MaxWidth="200" />
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="Auto" MaxWidth="50" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock
                                            Text="{x:Bind FileName}"
                                            Padding="10,4"
                                            Grid.Column="0"
                                            TextTrimming="CharacterEllipsis"
                                            VerticalAlignment="Center" />
                                        <TextBlock
                                            Text="{x:Bind Status}"
                                            Padding="10,4"
                                            Grid.Column="1"
                                            VerticalAlignment="Center" />
                                        <HyperlinkButton
                                            Content="{x:Bind URL}"
                                            NavigateUri="{x:Bind URL}"
                                            Padding="10,4"
                                            Grid.Column="2"
                                            HorizontalAlignment="Stretch"
                                            HorizontalContentAlignment="Left"
                                            VerticalAlignment="Center" />
                                        <Button
                                            Click="DeleteButton_Click"
                                            Grid.Column="3"
                                            Style="{StaticResource IconButton}"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Right"
                                            Margin="0"
                                            Padding="8">
                                            <FontIcon FontSize="12" Glyph="&#xE74D;" />
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
