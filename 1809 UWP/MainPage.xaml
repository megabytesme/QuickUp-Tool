<Page
    x:Class="_1809_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shared="using:QuickUp.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="48"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:Name="AppTitleBar" Background="Transparent" Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition x:Name="LeftPaddingColumn" Width="0"/>
                <ColumnDefinition/>
                <ColumnDefinition x:Name="RightPaddingColumn" Width="0"/>
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0">
                <FontIcon Glyph="&#xE898;" VerticalAlignment="Center" Margin="0,0,8,0" FontFamily="Segoe MDL2 Assets" />
                <TextBlock x:Name="AppTitle" Text="QuickUp Tool" VerticalAlignment="Center" Style="{ThemeResource CaptionTextBlockStyle}" />
            </StackPanel>
        </Grid>

        <AutoSuggestBox x:Name="SearchBox"
                            QueryIcon="Find"
                            PlaceholderText="Search uploads..."
                            Width="200"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            CornerRadius="8"
                            Height="32"
                            Background="{ThemeResource TextControlBackground}"
                            BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
                            TextChanged="SearchBox_TextChanged"
                            Grid.Column="1"/>

        <Grid Grid.Row="2" Margin="0,10,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center">
                <Border Width="200" Height="200" CornerRadius="100" Background="Transparent">
                    <Grid>
                        <ProgressBar Name="progressBar"
                                     Width="200"
                                     Height="200"
                                     Minimum="0"
                                     Maximum="100"
                                     Value="0"
                                     BorderThickness="0"
                                     Background="{ThemeResource ProgressBarBackgroundThemeBrush}"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"/>
                        <Ellipse Width="160"
                                 Height="160"
                                 Fill="{ThemeResource AccentFillColorDefaultBrush}"
                                 VerticalAlignment="Center"
                                 HorizontalAlignment="Center"/>
                        <muxc:Button x:Name="progressRingButton"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Click="ProgressRingButton_Click"
                                     AllowDrop="True"
                                     DragOver="ProgressRingButton_DragOver"
                                     Drop="ProgressRingButton_Drop"
                                     CornerRadius="100"
                                     Foreground="Black"
                                     HorizontalAlignment="Center"
                                     VerticalAlignment="Center"
                                     Height="200"
                                     Width="200">
                            <Grid>
                                <Ellipse Fill="Transparent" Width="160" Height="160" />
                                <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock x:Name="buttonText"
                                               Text="&#xE898;"
                                               TextWrapping="Wrap"
                                               TextAlignment="Center"
                                               FontFamily="Segoe MDL2 Assets"
                                               FontSize="20"
                                               Padding="10"
                                               Foreground="{ThemeResource DefaultTextForegroundThemeBrush}"/>
                                </Viewbox>
                            </Grid>
                        </muxc:Button>
                    </Grid>
                </Border>
            </Grid>

            <Border Grid.Row="1"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    Margin="20,10,20,20"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                    Padding="12"
                    CornerRadius="8"
                    BorderThickness="1">
                <ScrollViewer HorizontalScrollMode="Auto"
                              HorizontalScrollBarVisibility="Auto"
                              VerticalScrollMode="Auto"
                              VerticalScrollBarVisibility="Auto">
                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <TextBlock Name="noHistory"
                                   Text="Uploaded files will appear here"
                                   FontStyle="Italic"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Margin="24"
                                   Opacity="0.5"/>
                        <ListView x:Name="filesListView"
                                  ItemsSource="{x:Bind UploadedFiles, Mode=OneWay}"
                                  Visibility="Visible"
                                  MinHeight="200"
                                  Margin="8">
                            <ListView.Header>
                                <Grid ColumnSpacing="8" Padding="12">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="200"/>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="300"/>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="150"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="File Name" FontWeight="SemiBold" Grid.Column="0"/>
                                    <TextBlock Text="Status" FontWeight="SemiBold" Grid.Column="1"/>
                                    <TextBlock Text="URL" FontWeight="SemiBold" Grid.Column="2"/>
                                    <TextBlock Text="Expiry Date" FontWeight="SemiBold" Grid.Column="3"/>
                                    <TextBlock Text="File Size" FontWeight="SemiBold" Grid.Column="4"/>
                                </Grid>
                            </ListView.Header>
                            <ListView.ItemTemplate>
                                <DataTemplate x:DataType="shared:UploadedFile">
                                    <Grid ColumnSpacing="8" Padding="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="200"/>
                                            <ColumnDefinition Width="100"/>
                                            <ColumnDefinition Width="300"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="150"/>
                                            <ColumnDefinition Width="33"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{x:Bind FileName}" Grid.Column="0"/>
                                        <TextBlock Text="{x:Bind Status}" Grid.Column="1"/>
                                        <HyperlinkButton Grid.Column="2">
                                            <HyperlinkButton.Content>
                                                <TextBlock Text="{x:Bind URL}"/>
                                            </HyperlinkButton.Content>
                                        </HyperlinkButton>
                                        <TextBlock Text="{x:Bind ExpiryDate}" Grid.Column="3"/>
                                        <TextBlock Text="{x:Bind FileSizeReadable}" Grid.Column="4"/>
                                        <Button Click="DeleteButton_Click" Grid.Column="5" Width="34" Height="34">
                                            <FontIcon FontSize="12" Glyph="&#xE74D;"/>
                                        </Button>
                                    </Grid>
                                </DataTemplate>
                            </ListView.ItemTemplate>
                        </ListView>
                    </Grid>
                </ScrollViewer>
            </Border>

            <Border Grid.Row="2"
                    Padding="12"
                    Margin="20,0,20,20"
                    CornerRadius="8"
                    Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                    BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                    BorderThickness="1"
                    VerticalAlignment="Bottom">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16">
                    <Button Content="About" Click="AboutButton_Click" Width="100" CornerRadius="4"/>
                    <Button Content="Delete All" Click="DeleteAllButton_Click" Width="100" CornerRadius="4"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
