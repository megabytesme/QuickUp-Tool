<Page
    x:Class="_1809_UWP.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:shared="using:QuickUp.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Border x:Name="AppTitleBar" VerticalAlignment="Top" Background="Transparent">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="12,6">
                <FontIcon Glyph="&#xE898;" VerticalAlignment="Center" Margin="0,0,8,0" FontFamily="Segoe MDL2 Assets" />
                <TextBlock x:Name="AppTitle" Text="QuickUp Tool" VerticalAlignment="Center" Style="{ThemeResource CaptionTextBlockStyle}" />
            </StackPanel>
        </Border>

        <Grid Margin="0,48,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid
                Width="200"
                Height="200"
                Grid.ColumnSpan="2"
                VerticalAlignment="Top"
                HorizontalAlignment="Center">

                <Border
                    Width="200"
                    Height="200"
                    CornerRadius="100"
                    Background="Transparent">
                    <Grid>
                        <ProgressBar
                            Name="progressBar"
                            Width="200"
                            Height="200"
                            Minimum="0"
                            Maximum="100"
                            Value="0"
                            BorderThickness="0"
                            Background="{ThemeResource ProgressBarBackgroundThemeBrush}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
                        <Ellipse
                            Width="160"
                            Height="160"
                            Fill="{ThemeResource ApplicationPageBackgroundThemeBrush}"
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center" />
                        <muxc:Button
                            x:Name="progressRingButton"
                            Background="Transparent"
                            BorderThickness="0"
                            Click="ProgressRingButton_Click"
                            AllowDrop="True"
                            DragOver="ProgressRingButton_DragOver"
                            Drop="ProgressRingButton_Drop"
                            CornerRadius="100"
                            Foreground="Black"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Height="200"
                            Width="200">
                            <Grid>
                                <Ellipse Fill="Transparent" Width="160" Height="160" />
                                <Viewbox HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <TextBlock
                                        x:Name="buttonText"
                                        Text="&#xE898;"
                                        TextWrapping="Wrap"
                                        TextAlignment="Center"
                                        FontFamily="Segoe MDL2 Assets"
                                        FontSize="20"
                                        Padding="10" 
                                        Foreground="{ThemeResource DefaultTextForegroundThemeBrush}"/>
                                </Viewbox>
                            </Grid>
                        </muxc:Button>
                    </Grid>
                </Border>
            </Grid>
        </Grid>
        <Grid>
            <Border Grid.Row="1" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" CornerRadius="8" Margin="20,280,20,20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" muxc:Grid.ColumnSpan="3">
                <ScrollViewer HorizontalScrollMode="Auto" HorizontalScrollBarVisibility="Auto" VerticalScrollMode="Auto" VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <TextBlock Name="noHistory" Text="Uploaded files will appear here" FontStyle="Italic" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="2" />
                        <Grid Name="filesGrid" Margin="20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" MaxWidth="200" />
                                <ColumnDefinition Width="2*" MaxWidth="200" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="Auto" MaxWidth="50" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Column="0">
                                <StackPanel>
                                    <TextBlock Text="File Name" FontWeight="Bold" HorizontalAlignment="Left" Padding="10,5" />
                                    <ItemsControl ItemsSource="{x:Bind UploadedFiles, Mode=OneWay}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="shared:UploadedFile">
                                                <TextBlock Text="{x:Bind FileName}" Padding="10,5" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Column="1">
                                <StackPanel>
                                    <TextBlock Text="Status" FontWeight="Bold" HorizontalAlignment="Left" Padding="10,5" />
                                    <ItemsControl ItemsSource="{x:Bind UploadedFiles, Mode=OneWay}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="shared:UploadedFile">
                                                <TextBlock Text="{x:Bind Status}" Padding="10,5" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Column="2">
                                <StackPanel>
                                    <TextBlock Text="URL" FontWeight="Bold" HorizontalAlignment="Left" Padding="10,5" />
                                    <ItemsControl ItemsSource="{x:Bind UploadedFiles, Mode=OneWay}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="shared:UploadedFile">
                                                <HyperlinkButton Content="{x:Bind URL}" NavigateUri="{x:Bind URL}" Padding="10,5" />
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Column="3">
                                <StackPanel>
                                    <TextBlock Width="34" Margin="0,9,0,0" />
                                    <ItemsControl ItemsSource="{x:Bind UploadedFiles, Mode=OneWay}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate x:DataType="shared:UploadedFile">
                                                <Button Click="DeleteButton_Click" Width="33" Height="33" Background="Transparent" BorderThickness="0" HorizontalAlignment="Left">
                                                    <FontIcon FontSize="12" Glyph="&#xE74D;" />
                                                </Button>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </ScrollViewer>
            </Border>
        </Grid>
    </Grid>
</Page>
